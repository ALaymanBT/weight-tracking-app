<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/card"
        card_view:cardBackgroundColor="@color/gold">

        <TextView
            android:id="@+id/goal_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Weight"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_rowSpan="2"
        style="@style/card"
        card_view:cardBackgroundColor="@color/regentBlue">>

        <TextView
            android:id="@+id/weight_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Progress"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        style="@style/card"
        card_view:cardBackgroundColor="@color/cherub">>

        <TextView
            android:id="@+id/current_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Current Weight"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_rowWeight="2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Data Table"/>
    </RelativeLayout>


</GridLayout>